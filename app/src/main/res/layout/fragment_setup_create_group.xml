<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <de.ameyering.wgplaner.wgplaner.customview.CircularImageView
        android:id="@+id/fragment_setup_create_group_picture"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:srcCompat="@color/colorBackground" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_setup_create_group_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/fragment_setup_create_input_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set_up_group_name_hint"
            android:inputType="textCapWords|textAutoCorrect|textAutoComplete" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_setup_create_group_country_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

        <AutoCompleteTextView
            android:id="@+id/fragment_setup_create_group_country"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/set_up_group_currency_hint" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/fragment_setup_create_btn_create_group"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/set_up_btn_create_group" />

</LinearLayout>
